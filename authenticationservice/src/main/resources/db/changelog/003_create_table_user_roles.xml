<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

  <changeSet id="003-1" author="NAKozlovskaya">
    <comment>Table for storing user roles</comment>

    <createTable tableName="user_roles" schemaName="auth_schema">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="user_login" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="role" type="VARCHAR(50)">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>
    </createTable>

  </changeSet>

  <changeSet id="003-2" author="NAKozlovskaya">
    <comment>Create index for user_roles table</comment>
  <addForeignKeyConstraint
    baseTableName="user_roles"
    baseColumnNames="user_login"
    referencedTableName="user_credentials"
    referencedColumnNames="login"
    constraintName="fk_user_roles_credentials"
    onDelete="CASCADE"
    onUpdate="CASCADE"/>
  </changeSet>

</databaseChangeLog>