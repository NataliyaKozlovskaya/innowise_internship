<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">


  <changeSet id="002-1" author="NAKozlovskaya">
    <comment>Create users table with indexes</comment>

    <createTable tableName="users" schemaName="user_schema">
      <column name="uuid" type="VARCHAR(255)">
        <constraints primaryKey="true" nullable="false" primaryKeyName="pk_user"/>
      </column>
      <column name="name" type="VARCHAR(100)">
        <constraints nullable="false"/>
      </column>
      <column name="surname" type="VARCHAR(100)">
        <constraints nullable="false"/>
      </column>
      <column name="birth_date" type="DATE">
        <constraints nullable="false"/>
      </column>
      <column name="email" type="VARCHAR(255)">
        <constraints nullable="false" unique="true" uniqueConstraintName="uq_user_email"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="002-2" author="NAKozlovskaya">
    <comment>Create index for users table</comment>

    <createIndex tableName="users" schemaName="user_schema" indexName="idx_user_uuid">
      <column name="uuid" type="VARCHAR(255)"/>
    </createIndex>

    <rollback>
      <dropIndex tableName="users" schemaName="user_schema" indexName="idx_user_uuid"/>
    </rollback>
  </changeSet>

  <changeSet id="002-3" author="NAKozlovskaya">
    <comment>Create index for users table</comment>

    <createIndex tableName="users"  schemaName="user_schema" indexName="idx_user_email">
      <column name="email" type="VARCHAR(255)"/>
    </createIndex>

    <rollback>
      <dropIndex tableName="users" indexName="idx_user_email"/>
    </rollback>

  </changeSet>
</databaseChangeLog>