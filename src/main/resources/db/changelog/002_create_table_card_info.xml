<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

  <changeSet id="002-1" author="NAKozlovskaya">
    <comment>Create card_info table with foreign key</comment>

    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="card_info"/>
      </not>
      <tableExists tableName="user"/>
    </preConditions>

    <createTable tableName="card_info">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false" primaryKeyName="pk_card_info"/>
      </column>
      <column name="user_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="number" type="VARCHAR(20)">
        <constraints nullable="false" unique="true" uniqueConstraintName="uq_card_info_number"/>
      </column>
      <column name="holder" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="expiration_date" type="DATE">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <rollback>
      <dropTable tableName="card_info" cascadeConstraints="true"/>
    </rollback>
  </changeSet>

  <changeSet id="002-2" author="NAKozlovskaya">
    <comment>Add foreign key constraint to card_info</comment>

    <preConditions onFail="MARK_RAN">
      <tableExists tableName="card_info"/>
      <tableExists tableName="user"/>
      <not>
        <foreignKeyConstraintExists foreignKeyName="fk_card_info_user_id"/>
      </not>
    </preConditions>

    <addForeignKeyConstraint
      baseTableName="card_info"
      baseColumnNames="user_id"
      referencedTableName="use"
      referencedColumnNames="id"
      constraintName="fk_card_info_user_id"
      onDelete="CASCADE"
      onUpdate="CASCADE"/>

    <rollback>
      <dropForeignKeyConstraint baseTableName="card_info" constraintName="fk_card_info_user_id"/>
    </rollback>
  </changeSet>

  <changeSet id="002-3" author="NAKozlovskaya">
    <comment>Create index for card_info table</comment>

    <preConditions onFail="MARK_RAN">
      <tableExists tableName="card_info"/>
      <not>
        <indexExists tableName="card_info" indexName="idx_card_info_user_id"/>
      </not>
    </preConditions>

    <createIndex tableName="card_info" indexName="idx_card_info_id">
      <column name="id"/>
    </createIndex>

    <rollback>
      <dropIndex tableName="card_info" indexName="idx_card_info_id"/>
    </rollback>

  </changeSet>

  <changeSet id="002-4" author="NAKozlovskaya">
    <comment>Create index for card_info table</comment>

    <preConditions onFail="MARK_RAN">
      <tableExists tableName="card_info"/>
      <not>
        <indexExists tableName="card_info" indexName="idx_card_info_number"/>
      </not>
    </preConditions>

    <createIndex tableName="card_info" indexName="idx_card_info_number">
      <column name="number"/>
    </createIndex>

    <rollback>
      <dropIndex tableName="card_info" indexName="idx_card_info_number"/>
    </rollback>
  </changeSet>

</databaseChangeLog>